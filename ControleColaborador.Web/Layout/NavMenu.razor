@inject IDialogService DialogService
﻿﻿
<MudNavMenu Class="mud-width-full mt-4">

    <MudNavGroup Title="Colaboradores" Icon="@Icons.Material.Filled.People" Expanded="true">
        <MudNavLink Href="/colaboradores">Exibir</MudNavLink>
        <MudNavLink @onclick="() => AbrirDialogo(null, maxWidth)">Cadastrar</MudNavLink>
    </MudNavGroup>
</MudNavMenu>

@code{
    DialogOptions maxWidth = new DialogOptions() { MaxWidth = MaxWidth.Medium, FullWidth = true };

    private void AbrirDialogo(ColaboradorResponse colaborador, DialogOptions options)
    {
        DialogService.Show<ColaboradorFormulario>("Novo Colaborador", options);
    }
}
